<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpandedLaundaryJob">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Laundry Job ID"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/expanded_laundary_job_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="12345"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/expanded_laundary_submission_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Submission Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="15-05-2005"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Delivery Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/expanded_laundary_delivery_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="15-04-2001"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="No of clothes"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/expanded_laundary_no_of_clothes"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Laundary"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/expanded_laundary_laundary_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Best Clean Laundry"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Status"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/expanded_laundary_status"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Pending"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />


    </LinearLayout>
</FrameLayout>